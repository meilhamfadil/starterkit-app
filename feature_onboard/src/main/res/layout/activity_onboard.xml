<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_48dp"
        android:layout_marginTop="@dimen/dimens_12dp"
        android:contentDescription="@string/app_image_description"
        android:src="@drawable/ic_on_board" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_24dp"
        android:gravity="center"
        android:text="@string/app_title"
        android:textSize="@dimen/size_20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_24dp"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:gravity="center"
        android:text="@string/lorem_ipsum" />

    <View style="@style/Spacer" />

    <Button
        android:id="@+id/take_me_button"
        style="@style/PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_24dp"
        android:layout_marginBottom="@dimen/dimens_24dp"
        android:text="@string/label_take_me" />

</LinearLayout>