<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorLibPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            style="@style/ClickableContent"
            android:layout_width="@dimen/dimens_56dp"
            android:layout_height="@dimen/dimens_56dp"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dimens_14dp"
            android:src="@drawable/ic_baseline_chevron_left_24" />

        <FrameLayout
            android:id="@+id/frameLogo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="@dimen/dimens_16dp"
            android:paddingTop="@dimen/dimens_8dp"
            android:paddingEnd="@dimen/dimens_16dp"
            android:paddingBottom="@dimen/dimens_8dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/dimens_120dp"
                android:layout_height="match_parent" />

        </FrameLayout>

        <id.radhika.lib.ui.component.LabelComp
            android:id="@+id/label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimens_16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/size_20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/notification"
            style="@style/ClickableContent"
            android:layout_width="@dimen/dimens_56dp"
            android:layout_height="@dimen/dimens_56dp"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dimens_14dp"
            android:src="@drawable/ic_baseline_notifications_24" />

    </LinearLayout>

</androidx.cardview.widget.CardView>